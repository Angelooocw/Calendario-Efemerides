<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EventosFecha">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Detalle Fecha FRAGMENT WOWOW"
            android:textSize="24dp"
            android:id="@+id/evento_fecha_top"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventos_recyclerview">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="No hay celebraciones en esta fecha"
            android:textSize="14dp"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:id="@+id/evento_fecha_vacio"/>


    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->

</FrameLayout>